create_table("assignments") {
    t.Column("id", "integer", {primary: true})
    t.Column("name", "string")
    t.Column("subject", "string")
    t.Column("deadline", "datetime")
    t.Column("links", "string")
    t.Column("teacher_id", "integer")
}

add_foreign_key("assignments", "teacher_id", {"teachers": ["id"]}, {
    "on_delete": "cascade",
    "on_update": "cascade",
})
